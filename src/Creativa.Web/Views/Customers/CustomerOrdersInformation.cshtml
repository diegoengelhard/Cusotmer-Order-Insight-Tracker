@model IEnumerable<Creativa.Web.Models.Order>

@{
    ViewData["Title"] = "Northwind Orders";
    var customerId = ViewBag.CustomerId as string;
}

<div class="crm-page">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="crm-title mb-1">Northwind Orders</h1>
            <p class="text-muted mb-0">
                Pedidos de: <strong>@customerId</strong>
            </p>
        </div>
    </div>

    <div class="mb-3">
        <a asp-action="CustomersByCountry"
           asp-controller="Customers"
           class="btn btn-link px-0 crm-back-link">
            ← Volver a clientes por país
        </a>
    </div>

    <div class="crm-card p-3 p-md-4">
        <div id="ordersGrid"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var customerId = '@customerId';

            $("#ordersGrid").kendoGrid({
                dataSource: {
                    data: @Html.Raw(Json.Serialize(Model)),
                    pageSize: 10,
                    schema: {
                        model: {
                            id: "orderID",
                            fields: {
                                orderID: { type: "number" },
                                customerID: { type: "string" },
                                orderDate: { type: "date" },
                                shippedDate: { type: "date" }
                            }
                        }
                    }
                },
                pageable: true,
                sortable: true,
                noRecords: {
                    template: "Este cliente no tiene pedidos registrados."
                },
                columns: [
                    { 
                        field: "orderID", 
                        title: "Order Id", 
                        width: "140px" 
                    },
                    { 
                        field: "customerID", 
                        title: "Customer Id", 
                        width: "140px" 
                    },
                    {
                        field: "orderDate",
                        title: "Order Date",
                        width: "180px",
                        format: "{0:yyyy-MM-dd}",
                        template: function(dataItem) {
                            if (!dataItem.orderDate) return "-";
                            var date = kendo.parseDate(dataItem.orderDate);
                            return kendo.toString(date, "yyyy-MM-dd");
                        }
                    },
                    {
                        field: "shippedDate",
                        title: "Shipped Date",
                        width: "180px",
                        format: "{0:yyyy-MM-dd}",
                        template: function(dataItem) {
                            if (!dataItem.shippedDate) return "-";
                            var date = kendo.parseDate(dataItem.shippedDate);
                            return kendo.toString(date, "yyyy-MM-dd");
                        }
                    }
                ]
            });
        });
    </script>
}
